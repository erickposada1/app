<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6789AD"
    tools:context=".pantalla2">

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fecha1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="110dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="94dp" />

    <EditText
        android:id="@+id/fecha"
        android:layout_width="253dp"
        android:layout_height="53dp"
        android:layout_alignStart="@+id/email"
        android:layout_alignTop="@+id/fecha1"
        android:ems="10"
        android:inputType="date"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/fecha1"
        android:layout_width="139dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="318dp"
        android:text="Fecha nacimiento:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="139dp" />

    <TextView
        android:id="@+id/Direccion"
        android:layout_width="129dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/envio"
        android:layout_alignParentTop="true"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="106dp"
        android:text="Correo:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="94dp" />

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="162dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sexo"
            android:layout_width="85dp"
            android:layout_height="34dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="9dp"
            android:text="Genero:"
            android:textAlignment="viewStart"
            android:textColor="#FCFCFC"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/hombre"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:text="Hombre"
            android:textAlignment="viewEnd"
            android:textColor="#FCFCFC" />

        <CheckBox
            android:id="@+id/mujer"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:text="Mujer"
            android:textAlignment="viewEnd"
            android:textColor="#FCFCFC" />
    </LinearLayout>

    <Button
        android:id="@+id/envio"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="96dp"
        android:layout_toEndOf="@+id/fecha1"
        android:onClick="capturar"
        android:text="Enviar"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="589dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="44dp"
        android:onClick="salir1"
        app:srcCompat="@android:drawable/ic_lock_power_off"
        tools:layout_editor_absoluteX="348dp"
        tools:layout_editor_absoluteY="672dp" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="111dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="103dp"
        android:text="Nombre:"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="63dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btatras"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="28dp"
        android:text="regresar" />

</RelativeLayout>